{% extends 'base.html.twig' %}

{% block title %}TableReservation index{% endblock %}

{% block body %}
    <h1>TableReservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TableNumber</th>
                <th>ReservationDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for table_reservation in table_reservations %}
            <tr>
                <td>{{ table_reservation.id }}</td>
                <td>{{ table_reservation.tableNumber }}</td>
                <td>{{ table_reservation.reservationDate ? table_reservation.reservationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_table_reservation_show', {'id': table_reservation.id}) }}">show</a>
                    <a href="{{ path('app_table_reservation_edit', {'id': table_reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_table_reservation_new') }}">Create new</a>
{% endblock %}
